{
  "$schema": "Secure nanobot configuration template - copy to ~/.nanobot/config.json",
  
  "agents": {
    "defaults": {
      "workspace": "~/.nanobot/workspace",
      "model": "anthropic/claude-opus-4-5",
      "maxTokens": 8192,
      "temperature": 0.7,
      "maxToolIterations": 10
    }
  },
  
  "providers": {
    "_comment": "Use environment variables instead: NANOBOT_PROVIDERS__OPENROUTER__API_KEY",
    "openrouter": {
      "apiKey": ""
    }
  },
  
  "channels": {
    "telegram": {
      "enabled": false,
      "token": "",
      "allowFrom": ["YOUR_TELEGRAM_USER_ID"],
      "proxy": null
    },
    "discord": {
      "enabled": false,
      "token": "",
      "allowFrom": ["YOUR_DISCORD_USER_ID"]
    },
    "whatsapp": {
      "enabled": false,
      "bridgeUrl": "ws://127.0.0.1:3001",
      "allowFrom": ["+YOUR_PHONE_NUMBER"]
    },
    "feishu": {
      "enabled": false,
      "appId": "",
      "appSecret": "",
      "allowFrom": ["ou_YOUR_OPEN_ID"]
    }
  },
  
  "gateway": {
    "host": "127.0.0.1",
    "port": 18790
  },
  
  "tools": {
    "exec": {
      "timeout": 30,
      "restrictToWorkspace": true
    },
    "web": {
      "search": {
        "apiKey": "",
        "maxResults": 5
      }
    }
  }
}
